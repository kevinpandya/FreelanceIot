# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index(request: Request, searchPhrase: String ?= "",sessionId: String ?= "")
GET 	/skill/:id      			    controllers.HomeController.skill(id: String)
GET     /stat/:search                   controllers.HomeController.wordStat(search: String)
GET     /indvstats/:search/:index       controllers.HomeController.indvStat(search: String, index: Integer)
GET     /profile/:ownerid               controllers.HomeController.profile(ownerid: String)
GET     /readability/:search/:index     controllers.HomeController.readability(search: String, index: Integer)
GET     /h/ws/                          controllers.WebSocketController.ws

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
